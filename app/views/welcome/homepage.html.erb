<center><h6 id="notice"><%= notice %></h6></center>

<!-- Book Now button for reservations -->
<button class="booking-launch-button btn-md" onclick="showBooking()">
  <div class="booking-button-text"><i class="far fa-clock"></i> Book Now!</div>
</button>
<div id="bookingContainer" class="shadow">
  <div class="booking-top-bar" data-reactid=".0.5.0">
    <div class="booking-top-bar-text">RESERVATION REQUEST</div><div class="booking-top-bar-button" onclick="hideBooking()"><i class="fas fa-chevron-down"></i></div>
  </div>
  <div class="form-border">
  <%= render partial:"/reservations/form" %>
  </div>
</div>

<!-- Our Products -->
<section id="product">
  <%= render :partial => "welcome/products" %>
</section>

<!-- Services -->
<section id="services">
